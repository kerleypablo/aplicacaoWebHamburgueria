@model IEnumerable<WebApplication1.Models.MateriaPrima_Produto>


@{
    ViewData["Title"] = "Construindo Produtos";
}

<h2>@ViewData["Title"]</h2>
<form asp-action="Salvar">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MateriaPrima.Nome)
                </th>
                <th>
                    <label>Valor Unitario</label>
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MateriaPrima.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MateriaPrima.VlrUnitario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MateriaPrima.uni)
                    </td>
                    <td>
                        <label class="control-label"></label>
                        <input  class="form-control" />
                    </td>
                    <td>
                        <input type="checkbox" id=@Html.DisplayFor(modelItem => item.MateriaPrima.Id) name="ListaMateriais" value="@Html.DisplayFor(modelItem => item.MateriaPrima.Id)">          
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="UpdateChecks" class="btn btn-default" />
</form>


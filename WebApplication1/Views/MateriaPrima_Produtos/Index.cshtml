@model  IEnumerable<WebApplication1.Models.MateriaPrima>

@{
    ViewData["Title"] = "Construindo Produtos";
}

<h2>@ViewData["Title"]</h2>
<form asp-action="Salvar">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VlrUnitario)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrUnitario)
                    </td>
                    <td>
                        <input type="checkbox" id=@Html.DisplayFor(modelItem => item.Id) name="ListaMateriais">
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Salvar" class="btn btn-default" />
</form>


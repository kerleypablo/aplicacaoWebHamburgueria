@model IEnumerable<WebApplication1.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-default">Novo Produto</a>
</p>
<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                <label>Nome</label>
            </th>
            <th>
                <label>Preço</label>
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                   <img src=@Url.Content(item.Imagem) height="80px" width="120px"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.preco)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a> |
                </td>
                <td></td>
                <td>
                    <a asp-controller="Produtos" asp-action="Construct" class="btn btn-default" asp-route-id="@item.ID" asp->Construir</a>
                </td>
            </tr>
        }
    </tbody>
    
    
    
    </table>

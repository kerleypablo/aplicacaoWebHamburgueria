@model WebApplication1.Models.ViewModels.MateriaPrima_ProdutoFormViwModel


@{
    ViewData["Title"] = "Construindo Produtos";
}

<h2>@ViewData["Title"]</h2>
<form asp-action="UpdateChecks">
    
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    <label>Nome</label>
                </th>
                <th>
                    <label>Valor Unitario</label>
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model.MateriaPrimas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VlrUnitario)
                    </td>
                    <td>
                        <input type="checkbox" id=@Html.DisplayFor(modelItem => item.Id) name="ListaMateriais" value="@Html.DisplayFor(modelItem => item.Id)">
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Slavar" class="btn btn-default" />
</form>
